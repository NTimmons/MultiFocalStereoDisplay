$(OBJDIR)/RSCamera.o: ../src/RSCamera.cpp
	@echo $(notdir $<)
	$(SILENT) $(CXX) $(ALL_CXXFLAGS) $(FORCE_INCLUDE) -o "$@" -MF $(@:%.o=%.d) -c "$<"

$(OBJDIR)/RSTexture.o: ../src/RSTexture.cpp
